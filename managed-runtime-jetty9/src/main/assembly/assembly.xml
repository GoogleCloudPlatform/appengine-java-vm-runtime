    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/jetty-base</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>**</include>
